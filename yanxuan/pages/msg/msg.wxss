/* pages/msg/msg.wxss */
/*灰色背景*/
page{
    background-color: #f1f1f1;
}
/*卡片布局*/
.card{
    background-color: #fff;
    border: 1rpx solid #ddd;
    border-radius: 10rpx;
    margin: 50rpx 20rpx;
    padding: 30rpx;
    display: flex;
    flex-direction: column;
}
/*标题*/
.card-title{
    font-size: 20px;
    margin-bottom: 20rpx;
}
/*日期*/
.card-data{
    font-size: 14px;
    color: #ccc;
    border-bottom: 1rpx solid #ccc;
    padding-bottom: 20rpx;
    margin-bottom: 10rpx;
}
/*图片*/
.card-img{
    height: 250rpx;
    width: 100%;
}
/*描述*/
.card-desc{
    font-size: 16px;
    color: #333;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #ddd;
    margin: 20rpx 0;
}
/*详情*/
.card-read{
    font-size: 14px;
    color: #666;  
}
