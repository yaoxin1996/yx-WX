.slider1,.slider1 swiper{
    width:100%;
    height: 355px;
}
.slider1 image{
    width: 375px;
    height: 355px;
}
/*标题*/
.detail{
    padding: 30rpx;
    background-color: #fff;
}
.d-title{
    font-size: 15px;
    color: #333;
    font-weight: bold;
}
.title{
    position: relative;
}
.d-info{
    color: #666;
    font-size: 14px;
}
.d-p{
    position: absolute;
    top: 0px;
    right: 30rpx;
    border-left: 1rpx dashed #999;
    padding-left: 30rpx;
}
.d-pt{
    font-size: 15px;
    color: crimson;
    font-weight: bold;
}
.d-pb{
    font-size: 14px;
    color: #666;
}
.d-price{
    margin-top: 30rpx;
}
.dp{
    font-size: 14px;
    color: crimson;
    font-weight: bold;
}
.dp1{
    font-size: 20px;
    font-weight: bold;
    color: crimson;
}
.dp2{
    margin-left: 10rpx;
    font-size: 16px;
    color: #999;
    text-decoration: line-through;
}
/*列表*/
.cell{
    background-color: #fff;
    
}
.c-t{
    font-size: 15px;
}
.cell-item{
    border-bottom: 1rpx solid #ddd;
    padding: 20rpx 30rpx;
}
.cell-item1{
    border-bottom: 2rpx solid #ddd;
    padding: 20rpx 30rpx;
}
.fuwu{
    top: 0px;
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    width: 300rpx;
}
.p{
    color: crimson;
    font-size: 18px;
    font-weight: bold;
    margin-right: 5rpx;
}
.t{
    font-size: 14px;
    margin-right: 40rpx;
    color: #666;
}
/*用户评价*/
.pj{
    padding: 30rpx;
    background-color: #fff;
}
.avatar{
    display: flex;
    justify-content: start;
    line-height: 70rpx;
}
.avatar image{
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}
.aname{
    font-size: 15px;
    margin: 0px 15rpx;
}
.star{
    color: rgb(248, 149, 28);
}
.time text{
    color: #666;
    font-size: 13px;
    margin-right: 10rpx;
}
.pingjia{
    font-size: 14px;
}
.huifu{
    background-color: #f1f1f1;
    padding: 10rpx;
}
.huifu text{
    font-size: 13px;
    color: #333;
}
/*按钮*/
.btn{
    background-color: #fff;
    padding-top: 30rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.btn text{
    font-size: 15px;
    line-height: 60rpx;
}
.tui-number-group{
    display: table;
    table-layout: fixed;
    width: 300rpx;
    text-align: center;
    border-radius: 6rpx;
    overflow: hidden;
    border: 1px solid #bbb;
}
.tui-number-cell{
    display: table-cell;
    line-height: 1.7;
    border-radius: 0;
}
button::after{
    border-bottom: none;
    border-top: none;
    border-radius: 0;
}
.cell-i{
    display: flex;
    padding-bottom:30rpx;
    padding-top: 30rpx;
    background-color: #fff;
}
.addCart{
    background-color: rgb(233, 205, 151);
    font-size: 14px;
    color: #666;
    width: 100px;
    
}
.addOrder{
    background-color: #D6BC86;
    font-size: 14px;
    color: #333;
    width: 100px; 
}
