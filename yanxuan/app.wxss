  background-color: #f1f1f1;
}
/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  
} 
/*灰色分隔块*/
.divider{
  height:20rpx;
  background:#f1f1f1;
  box-shadow:0 5rpx 5rpx rgba(0,0,0,.1) inset;
}
/*箭头*/
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arrow::after{
  content: "";
  width: 15rpx;   /*箭头，正方形加边框*/
  height: 15rpx;
  border-top: 3rpx solid #999;
  border-right: 3rpx solid #999;
  transform: rotate(45deg);
}


/*截取*/
.ell{
  overflow: hidden;
  white-space: nowrap;  /*不换行*/
  text-overflow: ellipsis;    /*超出部分补充...*/
}

/*加载更多*/
.loadmore {
  color: #888;
  font-size: 13px;
  line-height: 20px;
  text-align: center;
}
.loadmore.loading::before {
  content: '';
  width: 20px;
  height: 20px;
  margin-top: -5px;
  margin-right: 10px;
  display: inline-block;
  vertical-align: middle;
  animation: loading 1s steps(12) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

@keyframes loading {
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(-360deg);
  }
}

/*评分 星星*/
.shop-start{
    position: relative;
}
.star-after{
    color: #e2e2e2;
}
.star-before{
    color: #ff9900;
    position: absolute;
    top: 0;
    left: 0;
    width: 90%;
    overflow: hidden;
}

/*列表*/
.cell{
    background-color: #fff;
    font-size: 16px;
}
.cell-item{
    border-bottom: 1rpx solid #ddd;
    padding: 20rpx 30rpx;
}